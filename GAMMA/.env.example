# WhatsApp PM System v3.0 (Gamma) - Environment Variables

# ==========================================
# SUPER ADMIN CONFIGURATION
# ==========================================
# Super admin credentials for system administration
# These are required to access the admin dashboard and debugging tools
SUPERADMIN_EMAIL=admin@hndasah.com
SUPERADMIN_PASSWORD=ChangeThisSecurePassword123!

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Database connection settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost/whatsapp_pm
# For Railway deployment, this will be automatically set

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Application environment
ENVIRONMENT=development
DEBUG=true

# Security settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# EXTERNAL SERVICE CONFIGURATION
# ==========================================
# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API (alternative AI provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# ==========================================
# WHATSAPP INTEGRATION
# ==========================================
# WhatsApp Business API settings
ENABLE_WHATSAPP_INTEGRATION=false
WHATSAPP_API_VERSION=v18.0
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/v1/whatsapp/webhook
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
# SMTP settings for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# ==========================================
# CORS SETTINGS
# ==========================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==========================================
# SECURITY HEADERS
# ==========================================
# Trusted hosts for security middleware
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable major features
ENABLE_AI_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# ==========================================
# LOGGING
# ==========================================
# Logging level
LOG_LEVEL=INFO

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Development server settings
HOST=0.0.0.0
PORT=8000
RELOAD=true
